<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#2B1A11"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Dorsal grande -->
        <TextView
            android:id="@+id/tvDorsal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#FF7A1A"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/bg_dorsal_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="44" />

        <!-- Nombre coche -->
        <TextView
            android:id="@+id/tvCarName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/tvDorsal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/llActionButtons"
            tools:text="Porsche 911 GT3" />

        <!-- Color / Equipo -->
        <TextView
            android:id="@+id/tvTeamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#BDBDBD"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvCarName"
            app:layout_constraintTop_toBottomOf="@id/tvCarName"
            app:layout_constraintEnd_toEndOf="@id/tvCarName"
            tools:text="Racing Yellow" />

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:id="@+id/llActionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/statusDot">
            
            <ImageButton
                android:id="@+id/btnEditCar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:tint="@color/white"
                android:contentDescription="@string/action_edit"
                android:layout_marginEnd="8dp" />
            
            <ImageButton
                android:id="@+id/btnDeleteCar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:tint="@color/red"
                android:contentDescription="@string/action_delete" />
        </LinearLayout>

        <!-- Estado del coche -->
        <View
            android:id="@+id/statusDot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/bg_status_green"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
