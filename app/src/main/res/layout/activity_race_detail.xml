<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E120C"
    android:padding="16dp"
    tools:context=".ui.racedetail.RaceDetailActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarRace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E120C"
        android:layout_marginTop="12dp"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white"
        app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        tools:title="Race Detail" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutRace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#1E120C"
        app:layout_constraintTop_toBottomOf="@id/toolbarRace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIndicatorColor="#FF7A1A"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#FF7A1A"
        app:tabTextColor="#BDBDBD" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerRace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutRace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/groupFabOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fabMain"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabExportExcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2B1A11"
            android:text="@string/action_export_excel"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_file_download"
            app:iconTint="#FF7A1A" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabAddIncident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2B1A11"
            android:text="@string/action_add_incident"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_error"
            app:iconTint="#FF7A1A" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabAddCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2B1A11"
            android:text="@string/action_add_car_to_race"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_car"
            app:iconTint="#FF7A1A" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#FF7A1A"
        android:src="@drawable/ic_add"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>