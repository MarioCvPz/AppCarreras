<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E120C"
    tools:context=".CarsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Buscador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#2B1A11"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/etBuscarCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Search by car or driver..."
                android:textColorHint="#BDBDBD"
                android:textColor="@android:color/white"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Lista de coches -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCars"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            tools:listitem="@layout/item_car" />

    </LinearLayout>

    <!-- FAB Add Car -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Add Car"
        android:backgroundTint="#FF7A1A"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/white"  />

</FrameLayout>
